@model List<Feature>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            @foreach (var item in Model)
            {
                <div class="main-slider pattern-overlay">
                    <div class="slider-item">
                        <div class="banner-content">
                            <h2 class="banner-title">@item.Title</h2>
                            <p>
                                @item.Description
                            </p>
                        </div>
                        <img src="@item.ImageURL" alt="banner" class="banner-image">
                    </div>
                </div>
            }

            </div>
        </div>
    </div>